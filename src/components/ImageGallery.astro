---
// src/components/ImageGallery.astro
interface Props {
  images: Array<{
    src: string;
    alt: string;
    title?: string;
  }>;
  columns?: 2 | 3 | 4;
  id?: string;
}

const { images, columns = 3, id = 'gallery' } = Astro.props;
const galleryId = `image-gallery-${id}`;
---

<div class={`image-gallery ${galleryId} my-8`}>
  <div class={`grid gap-4 ${
    columns === 2 ? 'grid-cols-1 md:grid-cols-2' :
    columns === 3 ? 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3' :
    'grid-cols-2 md:grid-cols-3 lg:grid-cols-4'
  }`}>
    {images.map((img, index) => (
      <button
        type="button"
        class="gallery-item relative aspect-square overflow-hidden rounded-xl bg-stone-100 shadow-sm hover:shadow-lg transition-all duration-300 group cursor-zoom-in"
        data-index={index}
        data-gallery={galleryId}
        data-event="gallery_click"
        data-label={img.alt}
        aria-label={`Ampliar imagen: ${img.alt}`}
      >
        <img
          src={img.src}
          alt={img.alt}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
          loading="lazy"
          width="600"
          height="600"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300 flex items-center justify-center">
          <svg class="w-10 h-10 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
          </svg>
        </div>
        {img.title && (
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <p class="text-white text-xs font-light">{img.title}</p>
          </div>
        )}
      </button>
    ))}
  </div>
</div>

<!-- Lightbox Modal -->
<div id={`lightbox-${galleryId}`} class="lightbox-modal fixed inset-0 bg-black/95 z-50 hidden items-center justify-center p-4" role="dialog" aria-modal="true">
  <button
    type="button"
    class="absolute top-4 right-4 text-white hover:text-[#6ed8d9] transition-colors p-2 z-10"
    aria-label="Cerrar galerÃ­a"
    data-close-lightbox={`image-gallery-${id}`}
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <button
    type="button"
    class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-[#6ed8d9] transition-colors p-3 bg-black/50 rounded-full disabled:opacity-30 disabled:cursor-not-allowed"
    aria-label="Imagen anterior"
    data-prev-lightbox={`image-gallery-${id}`}
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <button
    type="button"
    class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-[#6ed8d9] transition-colors p-3 bg-black/50 rounded-full disabled:opacity-30 disabled:cursor-not-allowed"
    aria-label="Imagen siguiente"
    data-next-lightbox={`image-gallery-${id}`}
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <div class="max-w-6xl max-h-full flex flex-col items-center justify-center">
    <img
      id={`lightbox-img-${galleryId}`}
      src=""
      alt=""
      class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl"
    />
    <div id={`lightbox-caption-${galleryId}`} class="text-white text-center mt-4 max-w-2xl px-4">
      <p class="text-sm md:text-base font-light"></p>
    </div>
    <div id={`lightbox-counter-${galleryId}`} class="text-white/70 text-sm mt-2">
      <span class="current">1</span> / <span class="total">{images.length}</span>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const galleries = document.querySelectorAll('[class*="image-gallery-"]');
    
    galleries.forEach((gallery) => {
      const galleryClass = Array.from(gallery.classList).find(c => c.startsWith('image-gallery-'));
      if (!galleryClass) return;
      
      const galleryId = galleryClass.replace('image-gallery-', '');
      const items = gallery.querySelectorAll('.gallery-item');
      const lightbox = document.getElementById(`lightbox-${galleryClass}`);
      const lightboxImg = document.getElementById(`lightbox-img-${galleryClass}`) as HTMLImageElement;
      const lightboxCaption = document.getElementById(`lightbox-caption-${galleryClass}`);
      const lightboxCounter = document.getElementById(`lightbox-counter-${galleryClass}`);
      const closeBtn = document.querySelector(`[data-close-lightbox="${galleryClass}"]`);
      const prevBtn = document.querySelector(`[data-prev-lightbox="${galleryClass}"]`) as HTMLButtonElement;
      const nextBtn = document.querySelector(`[data-next-lightbox="${galleryClass}"]`) as HTMLButtonElement;
      
      if (!lightbox || !lightboxImg) return;
      
      const imagesData: Array<{src: string, alt: string, title?: string}> = [];
      items.forEach((item) => {
        const img = item.querySelector('img');
        const titleDiv = item.querySelector('.absolute.bottom-0 p');
        if (img) {
          imagesData.push({
            src: img.src,
            alt: img.alt,
            title: titleDiv?.textContent || undefined
          });
        }
      });
      
      let currentIndex = 0;
      
      const showImage = (index: number) => {
        currentIndex = index;
        const img = imagesData[index];
        
        lightboxImg.src = img.src;
        lightboxImg.alt = img.alt;
        
        if (lightboxCaption) {
          const p = lightboxCaption.querySelector('p');
          if (p) {
            p.textContent = img.alt + (img.title ? ` - ${img.title}` : '');
          }
        }
        
        if (lightboxCounter) {
          const current = lightboxCounter.querySelector('.current');
          if (current) current.textContent = String(index + 1);
        }
        
        if (prevBtn) prevBtn.disabled = index === 0;
        if (nextBtn) nextBtn.disabled = index === imagesData.length - 1;
      };
      
      const openLightbox = (index: number) => {
        showImage(index);
        lightbox.classList.remove('hidden');
        lightbox.classList.add('flex');
        document.body.style.overflow = 'hidden';
      };
      
      const closeLightbox = () => {
        lightbox.classList.add('hidden');
        lightbox.classList.remove('flex');
        document.body.style.overflow = '';
      };
      
      items.forEach((item, index) => {
        item.addEventListener('click', () => openLightbox(index));
      });
      
      closeBtn?.addEventListener('click', closeLightbox);
      
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) closeLightbox();
      });
      
      prevBtn?.addEventListener('click', () => {
        if (currentIndex > 0) showImage(currentIndex - 1);
      });
      
      nextBtn?.addEventListener('click', () => {
        if (currentIndex < imagesData.length - 1) showImage(currentIndex + 1);
      });
      
      document.addEventListener('keydown', (e) => {
        if (!lightbox.classList.contains('hidden')) {
          if (e.key === 'Escape') closeLightbox();
          if (e.key === 'ArrowLeft' && currentIndex > 0) showImage(currentIndex - 1);
          if (e.key === 'ArrowRight' && currentIndex < imagesData.length - 1) showImage(currentIndex + 1);
        }
      });
    });
  });
</script>

<style>
  .lightbox-modal {
    backdrop-filter: blur(4px);
  }
  
  .gallery-item {
    transition: transform 0.2s ease;
  }
  
  .gallery-item:active {
    transform: scale(0.98);
  }
  
  @media (max-width: 768px) {
    .lightbox-modal button[data-prev-lightbox],
    .lightbox-modal button[data-next-lightbox] {
      padding: 0.5rem;
    }
    
    .lightbox-modal button[data-prev-lightbox] svg,
    .lightbox-modal button[data-next-lightbox] svg {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>
