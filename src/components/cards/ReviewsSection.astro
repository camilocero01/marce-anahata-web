---
// src/components/ReviewsSection.astro
import reviewsData from '../../data/reviews.json';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;

const translations = {
  es: {
    title: "Lo que dicen quienes han vibrado aquí",
    subtitle: "Testimonios reales de personas que han transformado su energía en nuestro centro.",
    readMore: "Ver reseña..",
    readAllReviews: "Leer todas las reseñas en Google"
  },
  en: {
    title: "What people who have vibrated here say",
    subtitle: "Real testimonials from people who have transformed their energy at our center.",
    readMore: "Read review..",
    readAllReviews: "Read all reviews on Google"
  }
};

const t = translations[lang];

const googleReviewsLink = "https://www.google.com/search?sca_esv=c581b398f00b64e5&q=Marce+Anahata+-+Centro+de+bienestar+Medell%C3%ADn&si=AMgyJEtREmoPL4P1I5IDCfuA8gybfVI2d5Uj7QMwYCZHKDZ-E8digRyuKFLuaq_GTmCUkL39iUOp2I4pUmF1uDhUV503YmVnTB23PfNQ4MOerXVzro1X_lmUuSqdl7xSBoOtlokEI3m4H7mnuTb5chGZQTWDBxvVJLo97qBQ_z8KL83eYwd9Z5M%3D&sa=X&ved=2ahUKEwj3q9znq8KRAxWGmLAFHbdkNWYQrrQLegQIHxAA&biw=1536&bih=826&dpr=1.25&zx=1765897501773&no_sw_cr=1"; 
---

<section id="reviews" class="py-24 bg-stone-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-serif text-[#243c5a] mb-6">{t.title}</h2>
    <p class="text-[#243c5a]/70 max-w-2xl mx-auto">{t.subtitle}</p>
  </div>

  <div class="swiper reviews-carousel px-6 md:px-0 mb-12">
    <div class="swiper-wrapper pb-12">
      
      {reviewsData.map((review) => (
        <div class="swiper-slide h-auto">
          <div class="bg-white p-6 rounded-2xl shadow-sm border border-marce-base-1 h-full flex flex-col hover:border-[#5d5a8c]/100 transition-colors relative group">
            
            <div class="text-[#5d5a8c] mb-4 text-base tracking-widest">
              {"★".repeat(review.estrellas)}
            </div>
            
            <blockquote class="text-base text-[#243c5a] leading-relaxed italic mb-6 flex-grow font-light">
              "{review.texto}" 
              {review.link && (
                <a 
                  href={review.link} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  title={lang === 'es' ? 'Ir a Google Maps' : 'Go to Google Maps'}
                  class=" text-xs font-medium text-stone hover:text-[#5d5a8c] hover:underline underline-offset-2 transition-colors"
                >
                  {t.readMore}
                </a>
              )}
            </blockquote>
            
            <div class="mt-auto flex items-center border-t border-stone-100 pt-4">
              <div class="mr-3 shrink-0">
                {review.foto ? (
                  <img 
                    src={review.foto} 
                    alt={`Foto de ${review.nombre}`} 
                    class="w-12 h-12 rounded-full object-cover border-2 border-white shadow-sm"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-12 h-12 bg-[#6ed8d9]/10 rounded-full flex items-center justify-center text-lg text-[#5d5a8c] font-serif border-2 border-white shadow-sm">
                    {review.nombre.charAt(0)}
                  </div>
                )}
              </div>
              
              <div class="text-left">
                <div class="flex items-center gap-2 mb-1">
                 {/* AQUÍ ESTÁ LA NUEVA IMPLEMENTACIÓN DE IMAGEN */}
                  {review.bandera && (
                     <img 
                       src={`https://flagcdn.com/${review.bandera.toLowerCase()}.svg`} 
                       alt={`Bandera de ${review.bandera}`} 
                       class="w-5 h-auto shadow-sm rounded-sm"
                     />
                  )}
                  <p class="font-semibold text-[#243c5a] text-base leading-none">
                    {review.nombre}
                  </p>
                   {/* AQUÍ ESTÁ LA NUEVA IMPLEMENTACIÓN DE IMAGEN */}
                  {review.bandera && (
                     <img 
                       src={`https://flagcdn.com/${review.bandera.toLowerCase()}.svg`} 
                       alt={`Bandera de ${review.bandera}`} 
                       class="w-5 h-auto shadow-sm rounded-sm"
                     />
                  )}
                </div>
                <span class="text-sm text-[#5d5a8c] uppercase tracking-wider font-light block">{review.ubicacion}</span>
              </div>
            </div>
          </div>
        </div>
      ))}

    </div>
    <div class="swiper-pagination !bottom-0"></div>
  </div>

  <div class="text-center mt-8">
    <a 
      href={googleReviewsLink} 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-flex items-center gap-3 px-6 py-3 bg-white text-[#243c5a] border border-stone-200 rounded-full hover:bg-stone-50 hover:border-[#6ed8d9] hover:text-[#5d5a8c] transition-all duration-300 shadow-sm group"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.26.81-.58z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      <span class="font-medium">{t.readAllReviews}</span>
      <span class="text-stone-400 group-hover:translate-x-1 transition-transform">→</span>
    </a>
  </div>

</section>

<script is:inline>
  const reviewsSection = document.getElementById('reviews');
  const swiperCssHref = 'https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css';
  const swiperScriptHref = 'https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.js';
  let swiperInitialized = false;

  const loadSwiperCss = () => {
    if (document.querySelector('link[data-swiper-css]')) return;
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = swiperCssHref;
    link.crossOrigin = 'anonymous';
    link.setAttribute('data-swiper-css', 'true');
    document.head.appendChild(link);
  };

  const loadSwiperScript = () => new Promise((resolve, reject) => {
    if (window.Swiper) return resolve();
    if (document.querySelector('script[data-swiper-js]')) {
      const existing = document.querySelector('script[data-swiper-js]');
      existing.addEventListener('load', () => resolve(), { once: true });
      existing.addEventListener('error', () => reject(new Error('Failed to load Swiper')), { once: true });
      return;
    }
    const script = document.createElement('script');
    script.src = swiperScriptHref;
    script.async = true;
    script.defer = true;
    script.crossOrigin = 'anonymous';
    script.setAttribute('data-swiper-js', 'true');
    script.addEventListener('load', () => resolve(), { once: true });
    script.addEventListener('error', () => reject(new Error('Failed to load Swiper')), { once: true });
    document.head.appendChild(script);
  });

  const initSwiper = async () => {
    if (swiperInitialized) return;
    swiperInitialized = true;
    loadSwiperCss();

    await loadSwiperScript();

    const Swiper = window.Swiper;
    if (!Swiper) return;

    new Swiper('.reviews-carousel', {
      // Modo de CSS deshabilitado para mejor rendimiento táctil
      cssMode: false,

      // Configuración base para móvil
      slidesPerView: 1,
      spaceBetween: 24,
      loop: true,

      // Habilitar gestos táctiles y grabCursor
      grabCursor: true,
      touchEventsTarget: 'container',
      touchRatio: 1,
      touchAngle: 45,
      simulateTouch: true,

      // Autoplay configuración
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      },

      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        dynamicBullets: false,
      },

      // Puntos de ruptura para responsive
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 24
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 32
        }
      }
    });
  };

  const scheduleInit = () => {
    if (!reviewsSection) return;
    if ('requestIdleCallback' in window) {
      window.requestIdleCallback(() => initSwiper(), { timeout: 2000 });
    } else {
      setTimeout(() => initSwiper(), 1500);
    }
  };

  if ('IntersectionObserver' in window && reviewsSection) {
    const observer = new IntersectionObserver((entries) => {
      if (entries.some((entry) => entry.isIntersecting)) {
        observer.disconnect();
        scheduleInit();
      }
    }, { rootMargin: '200px' });

    observer.observe(reviewsSection);
  } else {
    window.addEventListener('load', scheduleInit, { once: true });
  }
</script>

<style is:global>
  /* Color activo: Violeta #5d5a8c */
  .swiper-pagination-bullet-active {
    background-color: #5d5a8c !important; 
    opacity: 1 !important;
  }
  /* Color inactivo */
  .swiper-pagination-bullet {
    background-color: #5d5a8c !important;
    opacity: 0.3;
  }
  
  .swiper-slide {
    height: auto;
    display: flex;
  }
  
  /* Mejorar experiencia táctil en móvil */
  .reviews-carousel {
    touch-action: pan-y;
  }
  
  .swiper-wrapper {
    -webkit-user-select: none;
    user-select: none;
  }
  
  .swiper-pagination {
    position: static;
    margin-top: 2rem;
  }
</style>