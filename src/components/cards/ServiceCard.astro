---
interface Props {
  titulo: string;
  descripcion: string;
  imagen: string;
  duracion: string;
  link: string;
}

const { titulo, descripcion, imagen, duracion, link } = Astro.props;
---

<article class="group bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 border border-stone-100 flex flex-col">
  <div class="h-64 overflow-hidden relative">
    <div class="absolute inset-0 bg-stone-900/10 group-hover:bg-stone-900/0 transition-colors z-10"></div>
    <img 
      src={imagen} 
      alt={`Ritual de ${titulo} en Marce Anahata`} 
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
      loading="lazy" 
    />
  </div>
  
  <div class="p-8 flex flex-col flex-grow text-center">
    <span class="text-xs uppercase tracking-[0.2em] text-stone-500 mb-3">Duraci√≥n: {duracion}</span>
    <h3 class="text-2xl font-semibold text-stone-800 mb-4">{titulo}</h3>
    <p class="text-stone-600 leading-relaxed mb-6 flex-grow">{descripcion}</p>
    
    <a 
      href={link} 
      class="inline-block py-2 px-6 border border-stone-400 rounded-full text-stone-600 hover:bg-stone-800 hover:text-white transition-colors uppercase text-xs tracking-widest mt-auto self-center"
    >
      Reservar Ritual
    </a>
  </div>
</article>