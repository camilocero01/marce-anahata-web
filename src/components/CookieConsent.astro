---
// Component for cookie consent banner with GDPR compliance
---

<div id="cookie-banner" class="cookie-banner hidden">
  <div class="cookie-content">
    <div class="cookie-text">
      <p class="cookie-description">
        Este sitio web almacena cookies en tu computador. Estas cookies sirven para mejorar nuestro sitio web y ofrecer servicios más personalizados. Para conocer más acerca de las cookies que utilizamos, revisa nuestra <a href="/privacidad" class="cookie-link">Política de privacidad</a>.
      </p>
    </div>
    <div class="cookie-buttons">
      <button id="cookie-accept" class="cookie-btn cookie-accept">
        Aceptar
      </button>
    </div>
  </div>
</div>

<style>
  .cookie-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(36, 60, 90, 0.98), rgba(36, 60, 90, 0.95));
    backdrop-filter: blur(10px);
    padding: 1.25rem;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    border-top: 2px solid rgba(110, 216, 217, 0.3);
    animation: slideUp 0.4s ease-out;
  }

  .cookie-banner.hidden {
    display: none;
  }

  @keyframes slideUp {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .cookie-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .cookie-text {
    flex: 1;
    min-width: 280px;
  }

  .cookie-description {
    color: rgba(255, 255, 255, 0.95);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0;
  }

  .cookie-link {
    color: #6ed8d9;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s;
  }

  .cookie-link:hover {
    color: #8ef0f1;
  }

  .cookie-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .cookie-btn {
    padding: 0.75rem 2rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9375rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .cookie-accept {
    background: linear-gradient(135deg, #6ed8d9 0%, #5ac5c6 100%);
    color: #243c5a;
    box-shadow: 0 2px 8px rgba(110, 216, 217, 0.3);
  }

  .cookie-accept:hover {
    background: linear-gradient(135deg, #8ef0f1 0%, #6ed8d9 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(110, 216, 217, 0.4);
  }

  @media (max-width: 640px) {
    .cookie-content {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }

    .cookie-buttons {
      justify-content: center;
      width: 100%;
    }

    .cookie-btn {
      flex: 1;
      min-width: 120px;
    }
  }
</style>

<script>
  // Cookie consent management
  const CONSENT_KEY = 'marce-anahata-cookie-consent';
  const CONSENT_VERSION = '1.0';

  function checkCookieConsent() {
    const banner = document.getElementById('cookie-banner');
    if (!banner) return;

    const consent = localStorage.getItem(CONSENT_KEY);
    const consentData = consent ? JSON.parse(consent) : null;

    // Show banner if no consent or old version
    if (!consentData || consentData.version !== CONSENT_VERSION) {
      banner.classList.remove('hidden');
    }
  }

  function saveConsent(accepted: boolean) {
    const consentData = {
      accepted,
      version: CONSENT_VERSION,
      timestamp: new Date().toISOString()
    };
    localStorage.setItem(CONSENT_KEY, JSON.stringify(consentData));
  }

  function hideBanner() {
    const banner = document.getElementById('cookie-banner');
    if (banner) {
      banner.style.animation = 'slideDown 0.3s ease-out';
      setTimeout(() => {
        banner.classList.add('hidden');
      }, 300);
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    // Show banner if needed
    checkCookieConsent();

    // Handle accept button
    const acceptBtn = document.getElementById('cookie-accept');
    if (acceptBtn) {
      acceptBtn.addEventListener('click', () => {
        saveConsent(true);
        hideBanner();
      });
    }
  });

  // Add slideDown animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slideDown {
      from {
        transform: translateY(0);
        opacity: 1;
      }
      to {
        transform: translateY(100%);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);
</script>
