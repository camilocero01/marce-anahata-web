---
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
}

const { title, description = "Centro de bienestar Marce Anahata. Kundalini Yoga, Terapia de Sonido y Rituales en Medellín." } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Lato:wght@300;400&display=swap" rel="stylesheet">
        
        <title>{title} | Marce Anahata</title>
    </head>
    <body class="bg-stone-50 text-stone-800 font-sans">
        <header class="py-6 text-center border-b border-stone-200">
            <span class="font-serif text-2xl tracking-widest text-stone-600">MARCE ANAHATA</span>
        </header>

        <main class="min-h-screen">
            <slot />
        </main>

        <footer class="py-8 text-center text-sm text-stone-500 mt-20">
            <p>© 2025 Marce Anahata - Bienestar Integral</p>
        </footer>
    </body>
</html>

<style is:global>
    /* Definimos las fuentes globales */
    h1, h2, h3, h4 {
        font-family: 'Cormorant Garamond', serif;
    }
    body {
        font-family: 'Lato', sans-serif;
    }
</style>