---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import ReviewsSection from '../components/cards/ReviewsSection.astro';
import ritualesImg from '../assets/ritual/rituales.webp';

const page = {
  title: 'Circulo de Mujeres Conscientes',
  hook: 'Un espacio para volver a ti, sostenida por otras mujeres.',
  subtitle:
    'Encuentro mensual para liberar carga emocional, regular tu sistema nervioso y recuperar claridad en tus decisiones.',
  frequency: 'Encuentros mensuales',
  duration: '2 a 3 horas',
  location: 'El Poblado, Medellin',
  capacity: 'Cupos reducidos: maximo 12 mujeres',
  urgency: 'Proximo circulo con cupos limitados',
};

const whatsappMessage =
  'Hola Marce Anahata, quiero reservar o recibir informacion del proximo Circulo de Mujeres Conscientes.';
const whatsappLink = `https://wa.me/573207329921?text=${encodeURIComponent(whatsappMessage)}`;

const benefits = [
  'Bajas el ruido mental y regulas tu sistema nervioso con herramientas practicas.',
  'Te expresas sin juicio y recuperas seguridad en tu voz y tus decisiones.',
  'Te llevas un plan de integracion para sostener cambios reales durante el mes.',
];

const proof = [
  {
    title: 'Menos ansiedad, mas centro',
    text: 'Practicas guiadas para pasar de la saturacion al enfoque interno en una sola sesion.',
  },
  {
    title: 'Comunidad real',
    text: 'Un grupo intimo donde tu proceso es escuchado y validado con respeto.',
  },
  {
    title: 'Acompanamiento claro',
    text: 'Desde el primer mensaje sabes fecha, inversion, cupos y como prepararte.',
  },
];

const offerItems = [
  'Apertura guiada y acuerdos del espacio',
  'Movimiento somatico + respiracion reguladora',
  'Voz, mantra y expresion emocional consciente',
  'Ritual de cierre de ciclo y siembra de intencion',
  'Integracion final con sonido',
];

const faqs = [
  {
    q: 'No tengo experiencia. Puedo asistir?',
    a: 'Si. El circulo esta pensado para principiantes y mujeres con experiencia.',
  },
  {
    q: 'Cuanto tiempo dura?',
    a: 'Entre 2 y 3 horas. Recomendamos reservar ese bloque completo para integrar con calma.',
  },
  {
    q: 'Como confirmo mi cupo?',
    a: 'Escribiendo por WhatsApp. Recibes disponibilidad, valor y pasos de reserva.',
  },
];
---

<Layout
  title="Circulo de Mujeres V3.1 | Marce Anahata"
  description="Version 3.1 del Circulo de Mujeres Conscientes: propuesta emocional y comercial para convertir visitas en reservas por WhatsApp."
>
  <Fragment slot="head">
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Service',
        name: 'Circulo de Mujeres Conscientes',
        provider: {
          '@type': 'Person',
          name: 'Marce Anahata',
        },
        areaServed: 'Medellin',
        serviceType: 'Encuentro grupal de regulacion somatica y bienestar emocional',
      })}
    </script>
  </Fragment>

  <section class="relative h-[60vh] md:h-[70vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <Image
        src={ritualesImg}
        alt="Circulo de mujeres en encuentro guiado"
        class="w-full h-full object-cover opacity-90"
        width={1920}
        densities={[1.5, 2]}
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-[#243c5a]/30 mix-blend-multiply"></div>
      <div class="absolute inset-0 bg-stone-100/10 mix-blend-overlay"></div>
    </div>

    <div class="relative z-10 text-center text-white px-6 max-w-4xl mx-auto mt-16">
      <p class="inline-flex rounded-full border border-[#6ed8d9]/60 bg-[#6ed8d9]/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.16em] text-[#6ed8d9]">
        Version 3.1 Â· Emocional + Comercial
      </p>
      <h1 class="mt-6 text-4xl md:text-6xl font-serif mb-4 leading-tight drop-shadow-sm">{page.title}</h1>
      <p class="text-xl md:text-2xl font-light max-w-2xl mx-auto text-stone-50">{page.hook}</p>
      <p class="mt-4 text-base md:text-lg max-w-2xl mx-auto opacity-95 text-stone-100/95">{page.subtitle}</p>

      <div class="mt-8 flex flex-wrap justify-center gap-3 text-sm">
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.frequency}</span>
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.duration}</span>
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.location}</span>
      </div>

      <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
        <a
          href={whatsappLink}
          target="_blank"
          data-event="whatsapp_click"
          data-label="Women Circle V3.1 Hero CTA"
          class="inline-block bg-[#6ed8d9] text-[#243c5a] px-8 py-4 rounded-full font-bold hover:bg-white transition-all duration-300 transform hover:-translate-y-1 shadow-lg"
        >
          Quiero reservar mi cupo
        </a>
        <p class="text-sm text-stone-100/90">{page.capacity}</p>
      </div>

      <p class="mt-3 text-sm text-[#6ed8d9]/90">{page.urgency}</p>
    </div>
  </section>

  <section class="py-20 bg-white px-6">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
        <div>
          <span class="uppercase tracking-[0.2em] text-sm block text-[#5d5a8c] font-medium">Lo que cambia en ti</span>
          <h2 class="mt-3 text-3xl md:text-4xl font-serif text-[#243c5a]">Resultados que se sienten en tu vida real</h2>
          <p class="text-[#243c5a]/75 mt-4 leading-relaxed">
            Esta propuesta mantiene la profundidad emocional del circulo, pero con un enfoque claro a transformacion y accion.
          </p>

          <div class="mt-8 space-y-4">
            {benefits.map((item) => (
              <article class="rounded-2xl border border-stone-100 bg-stone-50 p-5 hover:shadow-md transition-shadow">
                <p class="text-sm leading-relaxed text-[#243c5a]/80">{item}</p>
              </article>
            ))}
          </div>
        </div>

        <aside class="bg-stone-50 p-8 rounded-2xl border border-stone-100 shadow-sm">
          <p class="text-xs uppercase tracking-[0.2em] text-[#5d5a8c] font-semibold">Tu reserva incluye</p>
          <h3 class="mt-3 text-2xl font-serif text-[#243c5a]">Que incluye tu reserva</h3>
          <ul class="mt-6 space-y-3 text-sm leading-relaxed text-[#243c5a]/80">
            {offerItems.map((item) => (
              <li class="flex gap-3">
                <span class="mt-1 h-2 w-2 rounded-full bg-[#6ed8d9]"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
          <a
            href={whatsappLink}
            target="_blank"
            data-event="whatsapp_click"
            data-label="Women Circle V3.1 Offer CTA"
            class="mt-7 inline-flex w-full items-center justify-center rounded-full bg-[#6ed8d9] px-6 py-3 text-xs font-bold uppercase tracking-[0.08em] text-[#243c5a] transition hover:bg-[#5d5a8c] hover:text-white"
          >
            Confirmar disponibilidad
          </a>
        </aside>
    </div>
  </section>

  <section class="py-20 bg-stone-50 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-wrap items-end justify-between gap-6">
        <div>
          <span class="uppercase tracking-[0.2em] text-sm block text-[#5d5a8c] font-medium">Por que funciona</span>
          <h2 class="mt-3 text-3xl md:text-4xl font-serif text-[#243c5a]">Una experiencia emocional con direccion clara</h2>
        </div>
      </div>

      <div class="mt-10 grid gap-4 md:grid-cols-3">
        {proof.map((item) => (
          <article class="rounded-2xl border border-stone-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold text-[#243c5a]">{item.title}</h3>
            <p class="mt-2 text-sm leading-relaxed text-[#243c5a]/75">{item.text}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-[#243c5a] text-white px-6 relative overflow-hidden">
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-[#6ed8d9] rounded-full filter blur-[150px] opacity-10"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-[#5d5a8c] rounded-full filter blur-[150px] opacity-20"></div>
    <div class="max-w-6xl mx-auto grid gap-10 lg:grid-cols-[1fr_1fr] relative z-10">
      <div>
        <p class="text-xs uppercase tracking-[0.22em] text-[#6ed8d9]">FAQ</p>
        <h2 class="mt-3 text-3xl font-serif md:text-4xl">Respuestas rapidas para decidir hoy</h2>
        <p class="mt-4 max-w-md text-sm leading-relaxed text-white/75">
          Si te resuena este llamado, escribe ahora y asegura tu lugar en el siguiente circulo.
        </p>
      </div>
      <div class="space-y-4">
        {faqs.map((item) => (
          <article class="rounded-2xl border border-white/20 bg-white/5 p-5">
            <h3 class="text-base font-semibold text-white">{item.q}</h3>
            <p class="mt-2 text-sm leading-relaxed text-white/80">{item.a}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-white px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-serif text-[#243c5a] mb-6">Si este mensaje te movio, este circulo es para ti</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg leading-relaxed text-[#243c5a]/70">
        Escribeme por WhatsApp para enviarte fecha, inversion y cupos en menos de 24 horas.
      </p>
      <div class="mt-10">
        <a
          href={whatsappLink}
          target="_blank"
          data-event="whatsapp_click"
          data-label="Women Circle V3.1 Final CTA"
          class="inline-flex items-center gap-3 bg-[#6ed8d9] text-[#243c5a] px-8 py-4 rounded-full font-bold hover:bg-[#243c5a] hover:text-white transition-all duration-300 shadow-lg"
        >
          Hablar por WhatsApp ahora
        </a>
      </div>
      <p class="mt-6 text-sm text-[#5d5a8c] font-light tracking-wider">{page.urgency}</p>
    </div>
  </section>

  <ReviewsSection lang="es" />
</Layout>
