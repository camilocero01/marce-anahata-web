---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/cards/ServiceCard.astro';
import ritualesData from '../data/rituales.json'; // Importamos los datos
import { getCollection } from 'astro:content';

// --- DATOS DEL SERVICIO ---
const serviceInfo = {
  title: "Rituales Sagrados con Terapia de Sonido en Medellín - El Poblado",
  subtitle: "Ceremonias diseñadas para honrar los ciclos de la vida, elevar la vibración y conectar desde el alma.",
  price: "$XXX.XXX COP", // PON TU PRECIO REAL AQUÍ
  duration: "1 Hora y 30 Minutos",
  whatsappMessage: "Hola Marce Anahata, me interesa la Terapia de Sonido. Quisiera agendar una sesión para experimentar la sanación vibracional."
};

const whatsappLink = `https://wa.me/573207329921?text=${encodeURIComponent(serviceInfo.whatsappMessage)}`; // CAMBIA EL NÚMERO

// Obtener 3 posts aleatorios del blog con tag "rituales"
const ritualesPosts = (await getCollection('blog', ({ data }) => 
  !data.draft && data.tags.includes('rituales')
))
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);

---

<Layout 
  title="Rituales Sagrados" 
  description="Celebra momentos especiales con nuestros rituales de pareja, cumpleaños y baby blessing en Medellín. Conexión espiritual y terapia de sonido."
>
  <section class="relative h-[50vh] flex items-center justify-center overflow-hidden">
    
    <video 
      class="absolute inset-0 w-full h-full object-cover z-0 opacity-60"
      autoplay 
      loop 
      muted 
      playsinline
    >
      <source src="/videos/rituales.mp4" type="video/mp4" />
    </video>
    
    <div class="absolute inset-0 bg-white opacity-30 z-10"></div>

    <div class="relative z-20 text-center text-[#243c5a] px-6 max-w-4xl mx-auto mt-20">
      <span class="uppercase tracking-[0.2em] text-sm md:text-base mb-4 block text-[#5d5a8c] font-bold">Tu espacio de sanación</span>
      
      <h1 class="text-4xl md:text-6xl font-serif mb-6 leading-tight">
        {serviceInfo.title}
      </h1>
      
      <p class="text-lg md:text-xl font-light max-w-2xl mx-auto mb-8 opacity-90 text-[#243c5a]">
        {serviceInfo.subtitle}
      </p>

    </div>
  </section>


  <section class="max-w-7xl mx-auto px-6 py-20 text-marce-base-1">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-12 text-marce-base-1">
      {ritualesData.map((ritual) => (
        <ServiceCard 
          titulo={ritual.titulo}
          descripcion={ritual.descripcion}
          imagen={ritual.imagen}
          duracion={ritual.duracion}
          link={ritual.slug}
        />
      ))}
    </div>
  </section>

  <section class="bg-[#243c5a] text-white px-6 relative overflow-hidden py-20 text-center">
    <h2 class="text-3xl mb-4">¿Buscas un ritual personalizado?</h2>
    <p class="mb-8 font-light text-stone-300">Diseñamos la experiencia perfecta según tu intención y necesidad.</p>
    <a href="/contacto" class="bg-stone-100 text-stone-900 py-3 px-8 rounded-sm hover:bg-stone-200 transition">Contáctame</a>
  </section>

    {ritualesPosts.length > 0 && (
    <section class="max-w-7xl mx-auto px-6 py-20 bg-stone-50">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif text-marce-base-3 mb-4">Artículos sobre Rituales</h2>
        <p class="text-stone-600 max-w-2xl mx-auto">Profundiza en el arte de los rituales y descubre cómo pueden transformar tu vida.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {ritualesPosts.map((post) => (
          <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 border border-stone-100 flex flex-col">
            {post.data.image && (
              <div class="h-48 overflow-hidden">
                <img 
                  src={post.data.image} 
                  alt={post.data.title} 
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-6 flex flex-col flex-grow">
              <time class="text-xs text-stone-500 mb-2 uppercase tracking-wider">
                {new Date(post.data.pubDate).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <h3 class="text-xl font-semibold text-marce-base-3 mb-3 leading-tight">
                {post.data.title}
              </h3>
              <p class="text-stone-600 text-sm mb-4 flex-grow leading-relaxed">
                {post.data.description}
              </p>
              <a 
                href={`/blog/${post.slug}`} 
                class="text-marce-base-1 font-semibold text-sm hover:text-marce-base-2 transition-colors inline-flex items-center gap-1"
              >
                Leer más 
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a 
          href="/blog/tag/rituales" 
          class="inline-block px-6 py-3 border-2 border-marce-base-1 text-marce-base-1 rounded-lg hover:bg-marce-base-1 hover:text-white transition-all font-semibold"
        >
          Ver todos los artículos sobre rituales
        </a>
      </div>
    </section>
  )}

</Layout>