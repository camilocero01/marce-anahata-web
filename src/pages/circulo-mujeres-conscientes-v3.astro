---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import ReviewsSection from '../components/cards/ReviewsSection.astro';
import ritualesImg from '../assets/ritual/rituales.webp';

const page = {
  title: 'Circulo de Mujeres Conscientes',
  subtitle:
    'Una experiencia mensual para regular el cuerpo, abrir la voz y atravesar procesos personales en comunidad.',
  frequency: 'Encuentros mensuales',
  duration: '2 a 3 horas',
  location: 'El Poblado, Medellin',
  capacity: 'Maximo 12 mujeres',
};

const whatsappMessage =
  'Hola Marce Anahata, quiero informacion sobre el Circulo de Mujeres Conscientes (fecha, inversion y cupos).';
const whatsappLink = `https://wa.me/573207329921?text=${encodeURIComponent(whatsappMessage)}`;

const pillars = [
  {
    title: 'Regulacion del sistema nervioso',
    text: 'Respiracion, movimiento somatico y pausas guiadas para pasar de la sobrecarga a un estado de mayor presencia.',
  },
  {
    title: 'Expresion de la voz',
    text: 'Practicas de mantra y sonido para desbloquear la expresion autentica y recuperar confianza en lo que sientes.',
  },
  {
    title: 'Ritual e integracion',
    text: 'Journaling, intencion y cierre sonoro para convertir lo vivido en claridad practica para tu vida diaria.',
  },
];

const flow = [
  {
    step: '01',
    title: 'Aterrizar',
    text: 'Llegada, apertura del contenedor y acuerdos de cuidado.',
  },
  {
    step: '02',
    title: 'Mover y respirar',
    text: 'Secuencia somatica para liberar carga y activar energia vital.',
  },
  {
    step: '03',
    title: 'Nombrar y escuchar',
    text: 'Ronda de palabra en escucha consciente y sin juicio.',
  },
  {
    step: '04',
    title: 'Ritualizar',
    text: 'Practica simbolica para cerrar ciclo o sembrar intencion.',
  },
  {
    step: '05',
    title: 'Integrar',
    text: 'Cierre con sonido para asimilar lo vivido con calma.',
  },
];

const faqs = [
  {
    q: 'Necesito experiencia previa?',
    a: 'No. El circulo esta disenado para mujeres que inician y para mujeres con practica previa.',
  },
  {
    q: 'Es terapia clinica?',
    a: 'No es psicoterapia ni reemplaza atencion profesional. Es un espacio de bienestar, regulacion y comunidad.',
  },
  {
    q: 'Que debo llevar?',
    a: 'Ropa comoda, agua y, si quieres, tu diario. El resto de materiales se incluye en el encuentro.',
  },
  {
    q: 'Como reservo?',
    a: 'Escribiendo por WhatsApp. Ahi recibes fecha, valor, disponibilidad y pasos de confirmacion.',
  },
];
---

<Layout
  title="Circulo de Mujeres V3 | Marce Anahata"
  description="Propuesta V3 del servicio Circulo de Mujeres Conscientes: experiencia mensual en Medellin con practicas somaticas, voz, ritual e integracion en comunidad."
>
  <Fragment slot="head">
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Service',
        name: 'Circulo de Mujeres Conscientes',
        provider: {
          '@type': 'Person',
          name: 'Marce Anahata',
        },
        areaServed: 'Medellin',
        serviceType: 'Bienestar y regulacion somatica en grupo',
      })}
    </script>
  </Fragment>

  <section class="relative isolate overflow-hidden bg-[#0f2c3f]">
    <div class="absolute inset-0">
      <Image
        src={ritualesImg}
        alt="Encuentro de circulo de mujeres"
        class="h-full w-full object-cover opacity-35"
        width={1920}
        densities={[1.5, 2]}
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_15%_20%,rgba(230,183,148,.35),transparent_40%),radial-gradient(circle_at_80%_15%,rgba(94,201,197,.28),transparent_38%),linear-gradient(120deg,rgba(15,44,63,.95),rgba(53,73,102,.86))]"></div>
    </div>

    <div class="relative mx-auto max-w-6xl px-6 pb-20 pt-28 md:pt-36">
      <p class="inline-flex items-center gap-2 rounded-full border border-[#d7c5b2]/40 bg-[#d7c5b2]/15 px-4 py-2 text-xs font-semibold uppercase tracking-[0.18em] text-[#f7ece0]">
        Propuesta V3 Â· Servicio
      </p>
      <h1 class="mt-6 max-w-4xl text-4xl font-serif leading-tight text-white md:text-6xl">{page.title}</h1>
      <p class="mt-6 max-w-2xl text-lg leading-relaxed text-[#f2ede8]/90">{page.subtitle}</p>

      <div class="mt-10 flex flex-wrap gap-3 text-sm text-[#f2ede8]">
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.frequency}</span>
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.duration}</span>
        <span class="rounded-full border border-white/25 bg-white/10 px-4 py-2">{page.location}</span>
      </div>

      <div class="mt-10 flex flex-wrap items-center gap-4">
        <a
          href={whatsappLink}
          target="_blank"
          data-event="whatsapp_click"
          data-label="Women Circle V3 Hero CTA"
          class="inline-flex items-center justify-center rounded-full bg-[#f3b07a] px-8 py-4 text-sm font-bold uppercase tracking-[0.08em] text-[#0f2c3f] transition hover:translate-y-[-1px] hover:bg-[#ffd0a9]"
        >
          Quiero informacion del proximo circulo
        </a>
        <p class="text-sm text-[#f2ede8]/80">{page.capacity}</p>
      </div>
    </div>
  </section>

  <section class="bg-[#f8f4ef] px-6 py-20">
    <div class="mx-auto grid max-w-6xl gap-10 lg:grid-cols-[1.1fr_.9fr]">
      <div>
        <h2 class="text-3xl font-serif text-[#193446] md:text-4xl">Tres pilares de la experiencia</h2>
        <p class="mt-4 max-w-2xl text-[#193446]/75">
          Esta version organiza la propuesta por resultados claros: regular, expresar e integrar.
        </p>

        <div class="mt-10 space-y-5">
          {pillars.map((pillar) => (
            <article class="rounded-2xl border border-[#193446]/10 bg-white p-6 shadow-[0_10px_30px_rgba(15,44,63,.06)]">
              <h3 class="text-lg font-semibold text-[#193446]">{pillar.title}</h3>
              <p class="mt-2 text-sm leading-relaxed text-[#193446]/75">{pillar.text}</p>
            </article>
          ))}
        </div>
      </div>

      <aside class="rounded-3xl border border-[#193446]/10 bg-[#193446] p-8 text-[#f8f4ef] shadow-[0_18px_45px_rgba(15,44,63,.25)]">
        <p class="text-xs uppercase tracking-[0.22em] text-[#82d2cd]">Para quien es</p>
        <h3 class="mt-3 text-2xl font-serif">Cuando esta propuesta te puede servir</h3>
        <ul class="mt-6 space-y-4 text-sm leading-relaxed text-[#f8f4ef]/85">
          <li class="flex gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-[#f3b07a]"></span>
            <span>Si estas en una etapa de cambio personal y necesitas un espacio seguro para sostenerla.</span>
          </li>
          <li class="flex gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-[#f3b07a]"></span>
            <span>Si buscas practicas concretas para ansiedad, desconexion o saturacion emocional.</span>
          </li>
          <li class="flex gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-[#f3b07a]"></span>
            <span>Si quieres una comunidad intima para escuchar y ser escuchada sin juicio.</span>
          </li>
        </ul>
      </aside>
    </div>
  </section>

  <section class="bg-white px-6 py-20">
    <div class="mx-auto max-w-6xl">
      <div class="flex flex-wrap items-end justify-between gap-6">
        <div>
          <p class="text-xs uppercase tracking-[0.22em] text-[#6a8b99]">Mapa del encuentro</p>
          <h2 class="mt-3 text-3xl font-serif text-[#193446] md:text-4xl">Como se vive una sesion</h2>
        </div>
        <p class="max-w-xl text-sm text-[#193446]/70">
          Una estructura clara ayuda a que cada participante se sienta sostenida desde que llega hasta el cierre.
        </p>
      </div>

      <div class="mt-10 grid gap-4 md:grid-cols-5">
        {flow.map((item) => (
          <article class="rounded-2xl border border-[#193446]/10 bg-[#f8f4ef] p-5">
            <p class="text-xs font-semibold tracking-[0.18em] text-[#6a8b99]">{item.step}</p>
            <h3 class="mt-2 text-base font-semibold text-[#193446]">{item.title}</h3>
            <p class="mt-2 text-sm leading-relaxed text-[#193446]/75">{item.text}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-[#193446] px-6 py-20 text-white">
    <div class="mx-auto max-w-6xl">
      <div class="grid gap-10 lg:grid-cols-[1fr_1fr]">
        <div>
          <p class="text-xs uppercase tracking-[0.22em] text-[#82d2cd]">Preguntas frecuentes</p>
          <h2 class="mt-3 text-3xl font-serif md:text-4xl">Dudas habituales antes de reservar</h2>
          <p class="mt-4 text-sm leading-relaxed text-white/75">
            Seccion pensada para reducir friccion y mejorar conversion desde SEO y trafico social.
          </p>
        </div>

        <div class="space-y-4">
          {faqs.map((item) => (
            <article class="rounded-2xl border border-white/20 bg-white/5 p-5">
              <h3 class="text-base font-semibold text-white">{item.q}</h3>
              <p class="mt-2 text-sm leading-relaxed text-white/80">{item.a}</p>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="bg-[#f8f4ef] px-6 py-20">
    <div class="mx-auto max-w-4xl rounded-[2rem] border border-[#193446]/10 bg-white p-10 text-center shadow-[0_22px_50px_rgba(15,44,63,.12)]">
      <p class="text-xs uppercase tracking-[0.2em] text-[#6a8b99]">Cierre y accion</p>
      <h2 class="mt-3 text-3xl font-serif text-[#193446] md:text-4xl">Reserva tu lugar en el proximo circulo</h2>
      <p class="mx-auto mt-4 max-w-2xl text-sm leading-relaxed text-[#193446]/75">
        Escribeme por WhatsApp y te comparto fecha, valor, cupos disponibles y recomendaciones para prepararte.
      </p>

      <div class="mt-8">
        <a
          href={whatsappLink}
          target="_blank"
          data-event="whatsapp_click"
          data-label="Women Circle V3 Final CTA"
          class="inline-flex items-center justify-center rounded-full bg-[#193446] px-8 py-4 text-sm font-bold uppercase tracking-[0.08em] text-white transition hover:bg-[#0f2c3f]"
        >
          Contactar por WhatsApp
        </a>
      </div>
    </div>
  </section>

  <ReviewsSection lang="es" />
</Layout>
