---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get related posts about rates, prices or wellness
const tariffPosts = (await getCollection('blog', ({ data, slug }) => 
  !data.draft && slug.startsWith('en/') && (
    data.tags.includes('wellness') || 
    data.tags.includes('yoga') || 
    data.tags.includes('meditation')
  )
))
