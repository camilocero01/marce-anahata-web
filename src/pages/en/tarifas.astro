              <tr class={`border-b border-stone-200 hover:bg-marce-base-2/5 transition-colors ${index % 2 === 0 ? 'bg-white' : 'bg-stone-50'}`}>
                <td class="px-6 py-4 font-medium text-marce-base-3">{rate.description}</td>
                <td class="px-6 py-4 text-right text-marce-base-3 font-semibold">{rate.total}</td>
                <td class="px-6 py-4 text-right text-marce-base-2 font-bold">{rate.individual}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Private Group Classes -->
    <div class="mb-28">
      <div class="mb-10">
        <h2 class="text-3xl md:text-4xl font-serif text-marce-base-3 mb-3">
          üë• Private Group Classes
        </h2>
        <p class="text-stone-600 text-lg">For groups of 3 people or more</p>
      </div>
      <div class="overflow-x-auto rounded-xl shadow-md border border-stone-200 mb-16">
        <table class="w-full">
          <thead>
            <tr class="bg-marce-base-3 text-white">
              <th class="px-6 py-4 text-left font-semibold">Description</th>
              <th class="px-6 py-4 text-right font-semibold">Total (USD)</th>
              <th class="px-6 py-4 text-right font-semibold">Per Person/Class (USD)</th>
            </tr>
          </thead>
          <tbody>
            {rates.groupPrivate.map((rate, index) => (
              <tr class={`border-b border-stone-200 hover:bg-marce-base-2/5 transition-colors ${index % 2 === 0 ? 'bg-white' : 'bg-stone-50'}`}>
