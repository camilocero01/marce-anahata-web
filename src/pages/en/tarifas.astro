  .slice(0, 3);

const rates = {
  group: [
    {
      description: 'Single class',
      total: '$17',
      individual: '$17'
    },
    {
      description: '4-class package',
      total: '$63',
      individual: '$16',
      highlight: true
    },
    {
      description: '8-class package',
      total: '$94',
      individual: '$12'
    },
    {
      description: '12-class package',
      total: '$133',
      individual: '$11'
    }
