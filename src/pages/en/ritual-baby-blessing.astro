---
import Layout from '../../layouts/Layout.astro';
import ReviewsSection from '../../components/cards/ReviewsSection.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import ritualBabyBlessingImg from '../../assets/ritual/ritual-baby-blessing.webp';
import ritualBabyParejImg from '../../assets/ritual/ritual-baby-blessing-pareja.webp';

// --- SERVICE DATA ---
const serviceInfo = {
  title: "Baby Blessing: Welcome Ritual",
  subtitle: "We honor the arrival of the new soul and bless your sacred transition into motherhood.",
  price: "$360.000 COP", // Update with your real price
  duration: "2 Hours",
  whatsappMessage: "Hi Marce, I'm expecting and would love to celebrate a Baby Blessing for my baby and me. Could you share details?",
};

const whatsappLink = `https://wa.me/573207329921?text=${encodeURIComponent(serviceInfo.whatsappMessage)}`;

// TEMPORARILY DISABLED FOR PRODUCTION
// const ritualPosts = (await getCollection('blog', ({ data, slug }) =>
//   slug.startsWith('en/') && !data.draft && data.tags.includes('rituales')
// ))
//   .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
//   .slice(0, 3);
const ritualPosts: any[] = [];
---

<Layout title="Baby Blessing | Marce Anahata" description="Baby Blessing ritual in Medell√≠n: celebrate your baby's arrival and honor your transition into motherhood with a sacred, transformative ceremony." lang="en">
  <Fragment slot="head">
    <script type="application/ld+json">{JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://marceanahata.com/en" },
        { "@type": "ListItem", "position": 2, "name": "Rituals", "item": "https://marceanahata.com/en/rituales" },
        { "@type": "ListItem", "position": 3, "name": "Baby Blessing", "item": "https://marceanahata.com/en/ritual-baby-blessing" }
      ]
    })}</script>
    <meta property="og:locale" content="en_US" />
  </Fragment>
  
  <section class="relative h-[70vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <Image 
        src={ritualBabyBlessingImg} 
        alt="Women blessing a pregnant mother" 
        class="w-full h-full object-cover opacity-90"
        width={1920}
        densities={[1.5, 2]}
      />
      <div class="absolute inset-0 bg-[#243c5a]/40 mix-blend-multiply"></div>
    </div>

    <div class="relative z-10 text-center text-white px-6 max-w-4xl mx-auto mt-20">
      <span class="uppercase tracking-[0.2em] text-sm md:text-base mb-4 block text-[#6ed8d9]">Celebration of Life</span>
      <h1 class="text-4xl md:text-6xl font-serif mb-6 leading-tight">{serviceInfo.title}</h1>
      <p class="text-lg md:text-xl font-light max-w-2xl mx-auto mb-8 opacity-95 text-stone-50">
        {serviceInfo.subtitle}
      </p>
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"        data-event="whatsapp_click"
        data-label="Baby Blessing Hero CTA"        class="inline-block bg-[#6ed8d9] text-[#243c5a] px-8 py-4 rounded-full font-medium hover:bg-[#5d5a8c] hover:text-white transition-all duration-300 transform hover:-translate-y-1 shadow-lg"
      >
        Plan my ceremony
      </a>
    </div>
  </section>

  <section class="py-20 bg-[#fffaf8] px-6"> 
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="order-2 md:order-1 relative">
        <div class="absolute -top-4 -left-4 w-full h-full border-2 border-[#5d5a8c]/20 rounded-tl-[5rem] rounded-br-[5rem] z-0"></div>
        <Image 
          src={ritualBabyParejImg} 
          alt="Hands on pregnant belly" 
          class="rounded-tl-[5rem] rounded-br-[5rem] shadow-xl relative z-10 w-full h-[500px] object-cover"
          width={600}
          height={500}
          densities={[1.5, 2]}
        />
      </div>
      <div class="order-1 md:order-2">
        <h2 class="text-3xl md:text-4xl font-serif text-[#243c5a] mb-6">More than gifts ‚Äî a spiritual nest of love</h2>
        <p class="text-[#243c5a]/80 mb-6 leading-relaxed">
          Unlike a traditional baby shower focused on material things, the Baby Blessing (or Blessingway) is an ancestral ceremony to <strong>mother the mother</strong>.
        </p>
        <p class="text-[#243c5a]/80 mb-8 leading-relaxed">
          We create a sacred circle of support with your closest loved ones to fill you with strength, trust, and love before birth, and to consciously welcome the soul that chose this home.
        </p>
        <ul class="space-y-4">
          <li class="flex items-center gap-3 text-[#5d5a8c]">
            <span class="text-xl">üå∏</span> Birth empowerment
          </li>
          <li class="flex items-center gap-3 text-[#5d5a8c]">
            <span class="text-xl">ü§∞</span> Deep connection with your baby
          </li>
          <li class="flex items-center gap-3 text-[#5d5a8c]">
            <span class="text-xl">‚ú®</span> Building a support network
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white px-6">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-serif text-[#243c5a] mb-4">The ritual experience</h2>
      <p class="text-[#243c5a]/60">A space woven with delicacy and depth.</p>
    </div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-[#fffaf8] p-8 rounded-xl text-center hover:shadow-md transition-shadow group border border-stone-50">
        <div class="w-16 h-16 bg-[#5d5a8c]/10 group-hover:bg-[#6ed8d9]/20 transition-colors rounded-full flex items-center justify-center mx-auto mb-6 text-2xl">ü§±</div>
        <h3 class="text-xl font-serif text-[#243c5a] mb-3">Honoring the Mother</h3>
        <p class="text-sm text-[#243c5a]/70">Symbolic activities (ritual braiding, foot washing, flower crown) to make you feel cared for and held.</p>
      </div>
      <div class="bg-[#fffaf8] p-8 rounded-xl text-center hover:shadow-md transition-shadow group border border-stone-50">
        <div class="w-16 h-16 bg-[#5d5a8c]/10 group-hover:bg-[#6ed8d9]/20 transition-colors rounded-full flex items-center justify-center mx-auto mb-6 text-2xl">ü§ç</div>
        <h3 class="text-xl font-serif text-[#243c5a] mb-3">Connecting with Baby</h3>
        <p class="text-sm text-[#243c5a]/70">Gentle guided meditation and mantra chanting to raise vibration and communicate with your baby's soul.</p>
      </div>
      <div class="bg-[#fffaf8] p-8 rounded-xl text-center hover:shadow-md transition-shadow group border border-stone-50">
        <div class="w-16 h-16 bg-[#5d5a8c]/10 group-hover:bg-[#6ed8d9]/20 transition-colors rounded-full flex items-center justify-center mx-auto mb-6 text-2xl">üïØÔ∏è</div>
        <h3 class="text-xl font-serif text-[#243c5a] mb-3">Circle of Blessings</h3>
        <p class="text-sm text-[#243c5a]/70">Your guests light their candles and share wishes and wisdom for your journey into motherhood.</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-[#243c5a] text-white px-6 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-64 h-64 bg-[#5d5a8c] rounded-full filter blur-[100px] opacity-20"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-stone-100 rounded-full filter blur-[100px] opacity-10"></div>

    <div class="max-w-4xl mx-auto text-center relative z-10">
      <h2 class="text-3xl md:text-5xl font-serif mb-8">Celebrate the miracle of life</h2>
      
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-12 inline-block max-w-2xl w-full">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-6 border-b border-white/10 pb-8">
            <div class="text-center md:text-left">
                <p class="text-[#6ed8d9] uppercase text-xs tracking-widest mb-1">Approx. duration</p>
                <p class="text-xl">{serviceInfo.duration}</p>
            </div>
            <div class="text-center md:text-right">
                <p class="text-[#6ed8d9] uppercase text-xs tracking-widest mb-1">Ritual investment</p>
                <p class="text-3xl font-serif">{serviceInfo.price}</p>
            </div>
        </div>

        <p class="mb-8 text-white/80 font-light italic">
          "To care for a baby, we must first care for the mother who holds them."
        </p>

        <div class="flex flex-col gap-3">
          <a 
            href="/en/tarifas#rituales"            data-event="pricing_click"
            data-label="EN Baby Blessing Ritual - Pricing Link"            class="w-full block bg-white text-[#243c5a] py-4 rounded-xl font-bold hover:bg-[#6ed8d9] transition-colors"
          >
            View Pricing
          </a>
          <a 
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            data-event="whatsapp_click"
            data-label="Baby Blessing CTA Final"
            class="w-full block bg-stone-100 text-[#243c5a] py-4 rounded-xl font-bold hover:bg-[#6ed8d9] transition-colors shadow-md"
          >
            Check availability on WhatsApp
          </a>
        </div>
        <p class="mt-4 text-xs text-white/40">*Ideal between weeks 28 and 36 of pregnancy. Price may vary depending on guest count. A 50% deposit is required to reserve the date.</p>
      </div>
    </div>
  </section>

  {ritualPosts.length > 0 && (
    <section class="max-w-7xl mx-auto px-6 py-20 bg-stone-50">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif text-marce-base-3 mb-4">Ritual articles</h2>
        <p class="text-stone-600 max-w-2xl mx-auto">Deepen into the art of rituals and discover how they can transform your life.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {ritualPosts.map((post) => (
          <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 border border-stone-100 flex flex-col">
            {post.data.image && (
              <div class="h-48 overflow-hidden">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-6 flex flex-col flex-grow">
              <time class="text-xs text-stone-500 mb-2 uppercase tracking-wider">
                {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <h3 class="text-xl font-semibold text-marce-base-3 mb-3 leading-tight">
                {post.data.title}
              </h3>
              <p class="text-stone-600 text-sm mb-4 flex-grow leading-relaxed">
                {post.data.description}
              </p>
              <a
                href={`/en/blog/${post.slug.replace(/^en\//, '')}`}
                class="text-marce-base-1 font-semibold text-sm hover:text-marce-base-2 transition-colors inline-flex items-center gap-1"
              >
                Read more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/en/blog/tag/rituales"
          class="inline-block px-6 py-3 border-2 border-marce-base-1 text-marce-base-1 rounded-lg hover:bg-marce-base-1 hover:text-white transition-all font-semibold"
        >
          See all ritual articles
        </a>
      </div>
    </section>
  )}

  <div class="bg-stone-50">
    <ReviewsSection lang="en" />
  </div>

</Layout>
