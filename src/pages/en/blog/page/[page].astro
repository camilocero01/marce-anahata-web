---
import Layout from "../../../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const PER_PAGE = 7;

export async function getStaticPaths() {
  const PER_PAGE = 7;
  const posts = await getCollection('blog', ({ data, slug }) => !data.draft && slug.startsWith('en/'));
  const totalPages = Math.max(1, Math.ceil(posts.length / PER_PAGE));
  return Array.from({ length: totalPages }, (_, i) => ({ params: { page: String(i + 1) } }));
}

const { page } = Astro.params;
const currentPage = Math.max(1, parseInt(page || '1', 10));

const allPosts = (await getCollection('blog', ({ data, slug }) => !data.draft && slug.startsWith('en/')))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

const totalPages = Math.max(1, Math.ceil(allPosts.length / PER_PAGE));
const start = (currentPage - 1) * PER_PAGE;
const paginated = allPosts.slice(start, start + PER_PAGE);
const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
const [featured, ...rest] = paginated;

const pageTitle = 'Blog';
const pageDescription = 'Articles on wellness, yoga, rituals and holistic health.';
const canonical = new URL(Astro.url).toString();
const prevUrl = currentPage > 1 ? (currentPage === 2 ? '/en/blog' : `/en/blog/page/${currentPage - 1}`) : undefined;
const nextUrl = currentPage < totalPages ? `/en/blog/page/${currentPage + 1}` : undefined;
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: `Blog | Marce Anahata`,
  description: pageDescription,
  url: canonical
};
---

<Layout title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    {prevUrl && <link rel="prev" href={prevUrl} />}
    {nextUrl && <link rel="next" href={nextUrl} />}
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://www.marceanahata.com/images/social-preview-wa.jpg" />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>
  <main class="max-w-5xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-serif text-[#243c5a] mb-4">Wellness Blog</h1>
      <p class="text-stone-600 text-lg max-w-2xl mx-auto">Articles on yoga, meditation, rituals and holistic health for your personal transformation</p>
      <p class="text-stone-500 text-sm mt-2">Page {currentPage} of {totalPages}</p>
      <div class="mt-4">
        <a href="/en/blog/rss.xml" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-[#243c5a] hover:underline">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path d="M5 5c7.732 0 14 6.268 14 14" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M5 12a7 7 0 0 1 7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <circle cx="6" cy="18" r="2" fill="currentColor" />
          </svg>
          <span>Blog RSS</span>
        </a>
      </div>
    </div>

    {paginated.length === 0 ? (
      <p class="text-center text-stone-500">No articles published yet.</p>
    ) : (
      <div class="space-y-12">
        {featured && (
          <article class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-stone-100 md:grid md:grid-cols-2 md:gap-6">
            {featured.data.image && (
              <div class="relative overflow-hidden h-full min-h-[300px]">
                <a href={`/en/blog/${featured.slug.replace(/^en\//, '')}`}>
                  <img
                    src={featured.data.image}
                    alt={featured.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading={currentPage === 1 ? "eager" : "lazy"}
                  />
                </a>
                {currentPage === 1 && (
                  <div class="absolute top-4 left-4 bg-[#6ed8d9] text-white px-3 py-1 rounded-full text-xs font-semibold shadow-md">
                    Most Recent
                  </div>
                )}
              </div>
            )}
            <div class="p-6 md:p-8 flex flex-col justify-center">
              <div class="flex items-center gap-3 mb-3 text-sm text-stone-500">
                <time datetime={featured.data.pubDate.toISOString()}>
                  {new Date(featured.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <span>•</span>
                <span>{featured.data.author || 'Marce Anahata'}</span>
              </div>
              <h2 class="font-serif text-[#243c5a] group-hover:text-[#6ed8d9] transition-colors mb-3 text-3xl md:text-4xl">
                <a href={`/en/blog/${featured.slug.replace(/^en\//, '')}`} class="hover:text-[#6ed8d9] transition-colors">{featured.data.title}</a>
              </h2>
              <p class="text-stone-600 mb-4 text-lg leading-relaxed">
                {featured.data.description}
              </p>
              {featured.data.tags && featured.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-4">
                  {featured.data.tags.map(tag => (
                    <a href={`/en/blog/tag/${encodeURIComponent(tag)}`} class="bg-[#6ed8d9]/20 text-[#243c5a] px-3 py-1 rounded-full text-xs font-medium hover:bg-[#6ed8d9]/30 transition-colors">
                      #{tag}
                    </a>
                  ))}
                </div>
              )}
              <div class="flex items-center text-[#5d5a8c] font-medium text-sm group-hover:text-[#6ed8d9] transition-colors">
                <a href={`/en/blog/${featured.slug.replace(/^en\//, '')}`} class="flex items-center">
                  <span>Read article</span>
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        )}

        {rest.length > 0 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {rest.map(post => (
              <article class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-stone-100">
                {post.data.image && (
                  <a href={`/en/blog/${post.slug.replace(/^en\//, '')}`}>
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </a>
                )}
                <div class="p-6 flex flex-col justify-center">
                  <div class="flex items-center gap-3 mb-3 text-sm text-stone-500">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </time>
                    <span>•</span>
                    <span>{post.data.author || 'Marce Anahata'}</span>
                  </div>
                  <h3 class="font-serif text-[#243c5a] group-hover:text-[#6ed8d9] transition-colors mb-3 text-2xl">
                    <a href={`/en/blog/${post.slug.replace(/^en\//, '')}`} class="hover:text-[#6ed8d9] transition-colors">{post.data.title}</a>
                  </h3>
                  <p class="text-stone-600 mb-4 text-base">
                    {post.data.description}
                  </p>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.data.tags.map(tag => (
                        <a href={`/en/blog/tag/${encodeURIComponent(tag)}`} class="bg-[#6ed8d9]/20 text-[#243c5a] px-3 py-1 rounded-full text-xs font-medium hover:bg-[#6ed8d9]/30 transition-colors">
                          #{tag}
                        </a>
                      ))}
                    </div>
                  )}
                  <div class="flex items-center text-[#5d5a8c] font-medium text-sm group-hover:text-[#6ed8d9] transition-colors">
                    <a href={`/en/blog/${post.slug.replace(/^en\//, '')}`} class="flex items-center">
                      <span>Read article</span>
                      <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    )}

    {totalPages > 1 && (
      <nav class="flex items-center justify-center gap-2 mt-16 pt-8 border-t border-stone-200">
        {Array.from({ length: totalPages }, (_, i) => i + 1).map(pageNum => (
          pageNum === currentPage ? (
            <span class="px-4 py-2 rounded-lg bg-[#6ed8d9] text-white font-medium">{pageNum}</span>
          ) : (
            <a href={pageNum === 1 ? '/en/blog' : `/en/blog/page/${pageNum}`} class="px-4 py-2 rounded-lg border border-stone-200 text-[#243c5a] hover:bg-stone-50 transition-colors">
              {pageNum}
            </a>
          )
        ))}
      </nav>
    )}
  </main>
</Layout>
