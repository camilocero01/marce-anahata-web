---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const title = "404 - Página no encontrada | Marce Anahata";
const description = "Ups, página no encontrada. Respira profundo y vuelve al inicio, o explora nuestros artículos.";

// Últimos 3 posts publicados en español (no borradores)
const latestPosts = (await getCollection('blog', ({ data, slug }) => !data.draft && !slug.startsWith('en/')))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-[#fafaf9] px-6 py-16">
    <div class="max-w-5xl mx-auto space-y-12">
      <div class="relative overflow-hidden rounded-3xl bg-white border border-stone-200 shadow-sm px-8 py-10 md:px-12">
        <div class="absolute -left-10 -top-10 w-64 h-64 bg-gradient-to-tr from-[#6ed8d9] to-[#5d5a8c] rounded-full blur-[120px] opacity-20"></div>
        <div class="relative flex flex-col gap-4 md:gap-6">
          <span class="inline-flex items-center gap-2 text-sm font-semibold text-[#5d5a8c] bg-[#6ed8d9]/15 px-4 py-2 rounded-full w-fit">404 • Página no encontrada</span>
          <h1 class="text-3xl md:text-4xl font-serif font-bold text-[#243c5a] leading-tight">
            Ups, no encontramos lo que buscabas
          </h1>
          <p class="text-stone-600 text-lg leading-relaxed max-w-2xl">
            Respira profundo. Mientras volvemos al centro, explora estos artículos recientes que podrían inspirarte.
          </p>
          <div class="flex flex-wrap gap-3">
            <a 
              href="/" 
              class="inline-flex items-center gap-2 bg-[#243c5a] text-white px-6 py-3 rounded-full font-medium hover:bg-[#5d5a8c] transition-all duration-300 shadow-md hover:shadow-lg"
            >
              Volver al inicio
            </a>
            <a
              href="/blog"
              class="inline-flex items-center gap-2 border-2 border-[#243c5a] text-[#243c5a] px-6 py-3 rounded-full font-medium hover:bg-[#243c5a] hover:text-white transition-all duration-300"
            >
              Ver el blog
            </a>
          </div>
        </div>
      </div>

      {latestPosts.length > 0 && (
        <section class="max-w-5xl mx-auto">
          <div class="text-center mb-8 space-y-3">
            <span class="inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-[#5d5a8c] bg-[#6ed8d9]/15 px-4 py-2 rounded-full">Últimos 3 artículos</span>
            <h2 class="text-2xl md:text-3xl font-serif text-[#243c5a]">Mientras tanto, explora nuestros últimos artículos</h2>
            <p class="text-stone-600 max-w-2xl mx-auto text-sm md:text-base">Sigue recorriendo ideas de bienestar, rituales y yoga mientras encuentras lo que buscabas.</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-12">
            {latestPosts.map((post) => (
              <article class="relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-stone-100 h-full">
                <div class="absolute top-4 left-4 bg-[#6ed8d9]/20 text-[#243c5a] text-xs font-semibold px-3 py-1 rounded-full">
                  {new Date(post.data.pubDate).toLocaleDateString('es-CO', { month: 'short', day: 'numeric' })}
                </div>
                {post.data.image && (
                  <a href={`/blog/${post.slug}`}>
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </a>
                )}
                <div class="p-6 flex flex-col h-full gap-3">
                  <div class="flex items-center gap-2 text-sm text-stone-500">
                    <span>{post.data.author || 'Marce Anahata'}</span>
                  </div>
                  <h3 class="font-serif text-[#243c5a] hover:text-[#6ed8d9] transition-colors text-2xl leading-tight">
                    <a href={`/blog/${post.slug}`} class="hover:text-[#6ed8d9] transition-colors">{post.data.title}</a>
                  </h3>
                  <p class="text-stone-600 text-base" style="display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;">
                    {post.data.description}
                  </p>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.map(tag => (
                        <a href={`/blog/tag/${encodeURIComponent(tag)}`} class="bg-[#6ed8d9]/20 text-[#243c5a] px-3 py-1 rounded-full text-xs font-medium hover:bg-[#6ed8d9]/30 transition-colors">
                          #{tag}
                        </a>
                      ))}
                    </div>
                  )}
                  <div class="mt-2 flex items-center text-[#243c5a] font-semibold text-sm hover:text-[#6ed8d9] transition-colors">
                    <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-1">
                      <span>Leer más…</span>
                      <svg class="w-4 h-4 hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}
    </div>
  </main>
</Layout>